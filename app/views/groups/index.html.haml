.px-3.lg:px-0.h-full
.container.mx-auto.my-8.px-4
  .flex.justify-between.items-center.mb-4
    %h1.text-3xl.text-bold Groups
  .flex.flex-col
    .-my-2.overflow-x-auto.sm:-mx-6.lg:-mx-8
      .py-2.align-middle.inline-block.min-w-full.sm:px-6.lg:px-8
        .shadow.overflow-hidden.border-b.border-gray-200.sm:rounded-lg
          %table.min-w-full.divide-y.divide-gray-200
            %thead.bg-gray-50
              %tr
                %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider{:scope => "col"}
                  Name
                %th.relative.px-6.py-3{:scope => "col"}
                  Count
            %tbody.bg-white.divide-y.divide-gray-200
              - @groups.each do |group|
                %tr.hover:bg-gray-100
                  %td.px-6.py-4.whitespace-nowrap
                    = link_to group do
                      .ml-4
                        .text-sm.font-medium.text-indigo-600
                          = group.name
                        .text-sm.text-indigo-500
                          = group.dir_email
                  %td.px-6.py-4.whitespace-nowrap.text-right.text-sm.font-medium
                    = link_to group do
                      .text-sm.font-medium.text-indigo-600
                        = group.members.size
                        