<div class="px-3 lg:px-0 h-full">
  <div class="container mx-auto">
    <h1 class="text-3xl text-bold my-6 text-center">
      <%= link_to "Groups", groups_path, {class: "text-indigo-600"} %> > <%= @group.name %>
    </h1>
  </div>
  
  <div class="grid md:grid-cols-2 gap-6 lg:gap-x-12">
      
      <div class="bg-white rounded-lg border border-gray-200 sm:rounded-md md:max-w-3xl">
        <div class="flex items-center px-8 py-8 border-b last:border-b-0">
          <div class="flex-1">
            <h4 class="font-medium text-xl text-gray-700 mb-3">Group Details</h4>
            <% if @group.dir_name.present? && @group.dir_name != @group.name%>
            <h6 class="font-medium text-sm text-gray-700">Name</h6>
            <div class="mb-2 text-sm leading-5 text-gray-700">
              <%= @group.name %>
            </div>
              <h6 class="font-medium text-sm text-gray-700">Directory Name</h6>
              <div class="mb-2 text-sm leading-5 text-red-700">
                ⚠️ <%= @group.dir_name %>
              </div>
            <% end %>
            <% if @group.dir_description.present? %>
              <h6 class="font-medium text-sm text-gray-700">Description</h6>
              <div class="mb-2 text-sm leading-5 text-gray-700">
                <%= @group.dir_description %>
              </div>
            <% end %>
            <% if @group.dir_email %>
              <h6 class="font-medium text-sm text-gray-700">Email Address</h6>
              <div class="mb-2 text-sm leading-5 text-gray-700">
                <%= mail_to @group.dir_email %>
              </div>
            <% end %>
            <% if @group.dir_aliases.present? %>
              <h6 class="font-medium text-sm text-gray-700">Aliases</h6>
              <div class="mb-2 text-sm leading-5 text-gray-700">
                <ul>
                  <% @group.dir_aliases.each do |dir_alias| %>
                    <li><%= dir_alias %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      
      <div class="bg-white rounded-lg border border-gray-200 sm:rounded-md md:max-w-3xl">
        <div class="flex items-center px-8 py-8 border-b last:border-b-0">
          <div class="flex-1">
            <div class="flex space-x-2 items-center w-full">
              <h4 class="font-medium text-xl text-gray-700">Members</h4>
              <%= link_to update_members_group_path(@group), {class: "button h-8 inline-block px-2 pt-2.5 pb-2 bg-blue-600 text-white font-medium text-xs leading-normal uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out flex items-center"} do %>
                <svg aria-hidden="true" focusable="false" class="h-6 w-6 mr-2" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z"/>
                  <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -5v5h5" />
                  <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 5v-5h-5" />
                </svg>
                Sync
              <% end %>
            </div>
            <%= render(@group.members.order(:official_family_name, :official_given_name)) || render('groups/empty') %>
          </div>
        </div>
      </div>
      
    </div>
  </div>
