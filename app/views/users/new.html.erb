<div class="overflow-hidden px-3 py-10 flex justify-center min-h-screen">
  <div class="w-full max-w-sm">
    <h2 class="block text-gray-700 text-xl font-bold mb-2">
      <%= t(".title") %>
    </h2>
    <div class="sign-up" id="clearance">
      <%= form_for @user, classs: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |form| %>
        <%= render partial: "/users/form", object: form %>
        <div class="flex items-center justify-between">
          <div class="submit-field">
            <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="other-links">
            <%= link_to t(".sign_in"), sign_in_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
          </div>
        </div>
      <% end %>
    </div>
    <p class="text-center text-gray-500 text-xs p-4">
      Verleng Foundation &copy; 2022
    </p>
  </div>
</div>
