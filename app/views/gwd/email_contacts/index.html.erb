<div class="px-3 lg:px-0 h-full">
  <div class="container mx-auto my-8 px-4">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-3xl text-bold">Google Workspace Directory Email Contacts</h1>
    </div>
    <div class="flex flex-col">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" scope="col">
                    Email
                  </th>
                  <th class="relative px-6 py-3" scope="col">
                    <span class="sr-only">Actions</span>
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @gwd_email_contacts.each do |email_contact| %>
                  <tr class="hover:bg-gray-100">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= link_to email_contact do %>
                        <div class="flex items-center">
                          <div class="ml-4">
                            <div class="text-sm font-medium text-indigo-600">
                              <%= email_contact.email %>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      Placeholder
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

